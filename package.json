{
	"name": "@latenode/js-node-bootstrap",
	"private": true,
	"version": "0.0.0",
	"main": "src/index.js",
	"type": "module",
	"description": "LateNode JS node extension",
	"files": [
		"src/"
	],
	"scripts": {
		"bundle": "rollup -c",
		"coverage": "c8 node --test",
		"coverage:report": "c8 report --reporter=json-summary",
		"test": "npm run coverage && npm run coverage:report",
		"posttest": "npx node-jq '{total}' coverage/coverage-summary.json > coverage/coverage-summary.tmp && mv coverage/coverage-summary.tmp coverage/coverage-summary.json",
		"release": "np"
	},
	"engines": {
		"node": ">=20"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wmakeev/latenode-js-node-bootstrap"
	},
	"author": {
		"name": "Vitaliy V. Makeev",
		"email": "w.makeev@gmail.com"
	},
	"license": "MIT",
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"quoteProps": "consistent",
		"trailingComma": "none",
		"arrowParens": "avoid"
	},
	"c8": {
		"reporter": [
			"lcov",
			"text"
		]
	},
	"dependencies": {
		"jmespath": "^0.16.0"
	},
	"devDependencies": {
		"@tsconfig/node24": "^24",
		"@tsconfig/strictest": "^2.0.7",
		"@types/jmespath": "^0.15.2",
		"@types/node": "^24",
		"c8": "^10.1.3",
		"node-jq": "^6.3.1",
		"rollup": "^4.52.5",
		"typescript": "^5.9.3"
	}
}
