  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ${file}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },

		{
      "type": "node",
      "request": "launch",
      "name": "Test ${file}",
      "skipFiles": [
        "<node_internals>/**"
      ],
			"runtimeArgs": ["--test-reporter=spec"],
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },

		{
      "type": "node",
      "request": "launch",
      "name": "Test --test-only ${file}",
      "skipFiles": [
        "<node_internals>/**"
      ],
			"runtimeArgs": ["--test-only", "--test-reporter=spec"],
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    }
  ]
}
